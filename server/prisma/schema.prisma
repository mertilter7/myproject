generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique @db.VarChar(50)
  name     String? @db.VarChar(50)
  password String
}

model News {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(191)
  subtitle    String   @db.VarChar(191)
  description String   @db.Text
  Images      Images[]

}

model Slides {
  id     Int      @id @default(autoincrement())
  Images Images[]
}

model Products {
  Id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(191)
  subtitle    String   @db.VarChar(191)
  price       Int
  description String   @db.Text
  Images      Images[]
}

model Categories {
  Id            Int          @id @default(autoincrement())
  title         String       @db.VarChar(191)
  name          String       @db.VarChar(191)
  parentId      Int?
  parent        Categories?  @relation("CategoriesSubcategories", fields: [parentId], references: [Id])
  subcategories Categories[] @relation("CategoriesSubcategories")
}

model Images {
  Id         Int       @id @default(autoincrement())
  path       String
  News       News?     @relation(fields: [newsId], references: [id])
  newsId     Int?
  Slides     Slides?   @relation(fields: [slideId], references: [id])
  slideId    Int?
  Products   Products? @relation(fields: [productsId], references: [Id])
  productsId Int?
  Home       Home?     @relation(fields: [homeId], references: [Id])
  homeId     Int?
}

model Contacts {
  Id          Int    @id @default(autoincrement())
  description String @db.Text
}

model Home {
  Id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(50)
  description String   @db.Text
  Images      Images[]
}

model Abouts {
  Id          Int    @id @default(autoincrement())
  title       String @db.VarChar(50)
  description String @db.Text
}
